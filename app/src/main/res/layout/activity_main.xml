<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RelativeLayoutStyle"
    tools:context="com.example.developping.simpletask.MainActivity">


    <FrameLayout
        style="@style/FrameLayoutStyle"
        android:id="@+id/frameLayout">

        <ImageView
            android:id="@+id/imgimg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/signinimg" />


        <ImageView
            android:id="@+id/thescenttext"
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@drawable/logo"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/titlenew"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/thescenttext"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:text="Monosodium glutamate is the sodium salt of glutamic acid, one of the most abundant naturally occuring non-essential amino acids."
            style="@style/TextViewStyle"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>


    <EditText
        android:id="@+id/email"
        android:hint="Enter Email"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/frameLayout"
        android:layout_marginBottom="16dp"
        android:layout_alignStart="@+id/login"
        android:layout_alignEnd="@+id/login"
        style="@style/EditTextStyle"/>



    <EditText
        android:inputType="textPassword"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_marginBottom="16dp"
        style="@style/EditTextStyle"/>



    <Button
        android:text="Start"
        android:textSize="20dp"
        android:id="@+id/login"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/password"
        style="@style/ButtonStyle" />
    <TextView
        android:text="Not registered? Please,"
        android:textSize="16dp"
        android:id="@+id/textView"
        android:layout_alignStart="@+id/login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login"
        android:textColor="#000000"
        style="@style/TextViewStyle"/>
    <TextView
        android:text="Sign Up"
        android:textSize="18dp"
        android:paddingLeft="16dp"
        android:id="@+id/signup"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        style="@style/TextViewStyle"/>


</RelativeLayout>
